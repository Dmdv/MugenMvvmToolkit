    <licenseUrl>http://opensource.org/licenses/MS-PL</licenseUrl>
    <tags>mugen mvvm toolkit binding wpf winforms android windows phone winrt binding cross platform ios</tags>
    <dependencies>
      <dependency id="MugenMvvmToolkit" version="[4.0.0, 4.1.0)" />      
      <dependency id="Xamarin.Android.Support.v7.AppCompat" version="22.2.0.0" />
    </dependencies>
