    <tags>mugen mvvm toolkit binding wpf winforms android windows phone winrt binding cross platform ios</tags>
    <dependencies>
      <dependency id="MugenMvvmToolkit" version="[3.3.0, 3.4.0)" />      
      <dependency id="Xamarin.Android.Support.v7.AppCompat" />
    </dependencies>
  </metadata>
